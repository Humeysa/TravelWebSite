@model List<TravelWebSite.Models.Siniflar.Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img style="width:300px ; height:150px" src="~/images/@item.BlogImage" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Baslik</h4>
                <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@item.Aciklama.Substring(0,80)</p>
                <p><a href="/Blog/BlogDetay/@item.Id"><span class="read">Daha Fazalsı >></span></a></p>
            </div>
        </div>
    }

    @Html.Action("Partial2","Home")

    <div class="clear"></div>
</div>